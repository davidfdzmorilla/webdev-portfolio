---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Get all projects and sort by date (newest first)
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get unique tags for filtering
const allTags = [...new Set(allProjects.flatMap((project) => project.data.tags))].sort();
---

<BaseLayout
  title="Projects"
  description="Explore WebDev's portfolio of production-ready applications built with progressive complexity."
>
  <Header />

  <main id="main-content" class="container mx-auto flex-1 px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-6xl">
      <!-- Page Header -->
      <header class="mb-12">
        <h1
          class="mb-4 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-4xl font-bold text-transparent dark:from-indigo-400 dark:to-purple-400 md:text-5xl"
        >
          Projects
        </h1>
        <p class="max-w-3xl text-xl text-slate-600 dark:text-slate-400">
          A collection of production-ready applications built through progressive complexity. Each
          project demonstrates specific technical capabilities and architectural patterns.
        </p>
      </header>

      <!-- Tag Filters -->
      <div class="mb-8">
        <h2 class="mb-3 text-sm font-semibold text-slate-700 dark:text-slate-300">
          Filter by tag:
        </h2>
        <div class="flex flex-wrap gap-2" role="group" aria-label="Project tags">
          <button
            class="tag-filter active rounded-full bg-indigo-600 px-3 py-1 text-sm font-medium text-white transition-colors hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900"
            data-tag="all"
          >
            All Projects
          </button>
          {
            allTags.map((tag) => (
              <button
                class="tag-filter rounded-full bg-slate-100 px-3 py-1 text-sm font-medium text-slate-700 transition-colors hover:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 dark:focus:ring-offset-slate-900"
                data-tag={tag}
              >
                {tag}
              </button>
            ))
          }
        </div>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
        {
          sortedProjects.map((project) => (
            <article
              class="project-card group rounded-lg border border-slate-200 bg-white p-6 transition-all hover:border-indigo-300 hover:shadow-lg dark:border-slate-800 dark:bg-slate-900/50 dark:hover:border-indigo-700"
              data-tags={project.data.tags.join(',')}
            >
              {/* Status Badge */}
              <div class="mb-4 flex items-center justify-between">
                <span
                  class:list={[
                    'inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium',
                    project.data.status === 'completed' &&
                      'bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400',
                    project.data.status === 'in_progress' &&
                      'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400',
                    project.data.status === 'planned' &&
                      'bg-slate-100 text-slate-800 dark:bg-slate-800 dark:text-slate-400',
                  ]}
                >
                  {project.data.status === 'completed' && '‚úì Completed'}
                  {project.data.status === 'in_progress' && '‚öôÔ∏è In Progress'}
                  {project.data.status === 'planned' && 'üìã Planned'}
                </span>
                {project.data.featured && (
                  <span class="inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-800 dark:bg-indigo-900/30 dark:text-indigo-400">
                    ‚≠ê Featured
                  </span>
                )}
              </div>

              {/* Title */}
              <h3 class="mb-2 text-xl font-bold text-slate-900 transition-colors group-hover:text-indigo-600 dark:text-slate-100 dark:group-hover:text-indigo-400">
                <a
                  href={`/projects/${project.slug}`}
                  class="rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900"
                >
                  {project.data.title}
                </a>
              </h3>

              {/* Description */}
              <p class="mb-4 line-clamp-3 text-slate-600 dark:text-slate-400">
                {project.data.description}
              </p>

              {/* Stack */}
              <div class="mb-4">
                <p class="mb-2 text-xs font-semibold text-slate-500 dark:text-slate-500">Stack:</p>
                <div class="flex flex-wrap gap-2">
                  {project.data.stack.map((tech) => (
                    <span class="rounded bg-slate-100 px-2 py-1 text-xs text-slate-700 dark:bg-slate-800 dark:text-slate-300">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              {/* Links */}
              <div class="mt-4 flex gap-3 border-t border-slate-200 pt-4 dark:border-slate-800">
                {project.data.github && (
                  <a
                    href={project.data.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center rounded-md text-sm text-slate-600 transition-colors hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:text-slate-400 dark:hover:text-indigo-400 dark:focus:ring-offset-slate-900"
                  >
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    GitHub
                  </a>
                )}
                {project.data.demo && (
                  <a
                    href={project.data.demo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center rounded-md text-sm text-slate-600 transition-colors hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:text-slate-400 dark:hover:text-indigo-400 dark:focus:ring-offset-slate-900"
                  >
                    <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    Live Demo
                  </a>
                )}
                <a
                  href={`/projects/${project.slug}`}
                  class="ml-auto inline-flex items-center rounded-md text-sm font-medium text-indigo-600 transition-colors hover:text-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:text-indigo-400 dark:hover:text-indigo-300 dark:focus:ring-offset-slate-900"
                >
                  Read more ‚Üí
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Tag filtering functionality
  const filterButtons = document.querySelectorAll('.tag-filter');
  const projectCards = document.querySelectorAll('.project-card');

  filterButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const tag = button.getAttribute('data-tag');

      // Update active button
      filterButtons.forEach((btn) => {
        btn.classList.remove('active', 'bg-indigo-600', 'text-white', 'hover:bg-indigo-700');
        btn.classList.add(
          'bg-slate-100',
          'dark:bg-slate-800',
          'text-slate-700',
          'dark:text-slate-300',
          'hover:bg-slate-200',
          'dark:hover:bg-slate-700'
        );
      });

      button.classList.add('active', 'bg-indigo-600', 'text-white', 'hover:bg-indigo-700');
      button.classList.remove(
        'bg-slate-100',
        'dark:bg-slate-800',
        'text-slate-700',
        'dark:text-slate-300',
        'hover:bg-slate-200',
        'dark:hover:bg-slate-700'
      );

      // Filter projects
      projectCards.forEach((card) => {
        const cardTags = card.getAttribute('data-tags') || '';
        if (tag === 'all' || cardTags.includes(tag)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
